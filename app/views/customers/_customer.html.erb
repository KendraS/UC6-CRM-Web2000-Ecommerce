<div class="customer">
	<p class="edit_link">
		<%= link_to 'edit', edit_customer_path(customer) %>
		<%= link_to 'x', customer, method: :delete, data: { confirm: 'Are you sure?' } %>
	</p>
	
	<h2><%= customer.full_name %></h2>
	
	<% if customer.image.present? %>
		<%= image_tag customer.image %>
	<% end %>
	
	<p><strong>Phone: </strong><%= customer.phone_number %></p>
	
	<% if customer.email.present? %>
		<p><strong>Email: </strong><%= customer.email %></p>
    <% end %>

    <% if customer.province_id.present? %>
		<p><strong>Province ID: </strong><%= customer.province_id%></p>
		<p><strong>Province Name: </strong><%= customer.province.name %></p>
	<% else %>
		<p><strong>Province: </strong>None</p>
    <% end %>

    <p><strong>Notes: </strong><%= customer.notes %></p>
</div>
